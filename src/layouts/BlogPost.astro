---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Heading = { depth: number; slug: string; text: string };
type Props = CollectionEntry<'blog'>['data'] & { headings?: Heading[] };

const { title, description, date, categories, headings = [] } = Astro.props;

const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const breadcrumbItems = [
	{
		"@type": "ListItem",
		position: 1,
		name: "ホーム",
		item: Astro.site?.href,
	},
];

if (categories && categories.length > 0) {
	breadcrumbItems.push({
		"@type": "ListItem",
		position: 2,
		name: categories[0],
		item: new URL(`/category/${categories[0].toLowerCase()}`, Astro.site).href,
	});
	breadcrumbItems.push({
		"@type": "ListItem",
		position: 3,
		name: title,
		item: canonicalURL.href,
	});
} else {
	breadcrumbItems.push({
		"@type": "ListItem",
		position: 2,
		name: title,
		item: canonicalURL.href,
	});
}

const jsonLd = JSON.stringify([
	{
		"@context": "https://schema.org",
		"@type": "BlogPosting",
		headline: title,
		description: description,
		datePublished: date.toISOString(),
		url: canonicalURL.href,
		author: {
			"@type": "Person",
			name: "nansystem",
			url: Astro.site?.href,
		},
		publisher: {
			"@type": "Person",
			name: "nansystem",
			url: Astro.site?.href,
		},
	},
	{
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		itemListElement: breadcrumbItems,
	},
]);
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
		<script type="application/ld+json" set:html={jsonLd} />
	</head>

	<body>
		<Header />
		<main class:list={[{ 'has-toc': tocHeadings.length > 0 }]}>
			<article>
				<div class="post-header">
					<div class="post-meta">
						<FormattedDate date={date} />
						{categories && categories.length > 0 && (
							<span class="separator">/</span>
							<span class="categories">
								{categories.map((cat: string, i: number) => (
									<>
										{i > 0 && <span>, </span>}
										<a href={`/category/${cat.toLowerCase()}`}>{cat}</a>
									</>
								))}
							</span>
						)}
					</div>
					<h1>{title}</h1>
				</div>
				<div class="prose">
					<slot />
				</div>
			</article>
			{tocHeadings.length > 0 && (
				<nav class="toc" aria-label="目次">
					<p class="toc-title">目次</p>
					<ol>
						{tocHeadings.map(h => (
							<li class:list={[{ 'toc-h3': h.depth === 3 }]}>
								<a href={`#${h.slug}`}>{h.text}</a>
							</li>
						))}
					</ol>
				</nav>
			)}
		</main>
		<Footer />
	</body>
</html>

<style>
	main.has-toc {
		width: 1060px;
		display: grid;
		grid-template-columns: minmax(0, 1fr) 220px;
		column-gap: 2.5rem;
		align-items: start;
	}

	.post-header {
		margin-bottom: 2em;
	}
	.post-meta {
		font-size: 0.85em;
		color: rgb(var(--gray));
		margin-bottom: 0.5em;
	}
	.separator {
		margin: 0 0.4em;
	}
	.categories a {
		color: rgb(var(--gray));
	}
	.categories a:hover {
		color: var(--accent);
	}
	h1 {
		font-size: 1.6em;
		line-height: 1.4;
		margin: 0;
	}
	.prose {
		color: rgb(var(--gray-dark));
	}

	/* TOC */
	.toc {
		position: sticky;
		top: 2rem;
		font-size: 0.82em;
		line-height: 1.5;
		border-left: 2px solid rgb(var(--border));
		padding-left: 1em;
		background: #fff;
	}
	.toc-title {
		font-weight: 700;
		color: rgb(var(--black));
		margin: 0 0 0.6em;
		font-size: 0.95em;
	}
	.toc ol {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.toc li {
		margin-bottom: 0.35em;
	}
	.toc-h3 {
		padding-left: 0.75em;
	}
	.toc a {
		color: rgb(var(--gray));
		text-decoration: none;
	}
	.toc a:hover {
		color: var(--accent);
	}
	.toc a.active {
		color: var(--accent);
		font-weight: 600;
	}

	main.has-toc :global(.side-by-side) {
		width: 100%;
		margin-left: 0;
		transform: none;
		padding: 0;
	}

	@media (max-width: 1100px) {
		main.has-toc {
			display: block;
			width: auto;
			max-width: calc(100% - 2em);
		}
		.toc {
			display: none;
		}
	}
</style>

<script>
	const headingElements = Array.from(
		document.querySelectorAll<HTMLElement>('article h2, article h3')
	);
	const tocLinks = document.querySelectorAll<HTMLAnchorElement>('.toc a');

	if (tocLinks.length > 0) {
		function updateActive() {
			let activeIdx = -1;
			for (let i = 0; i < headingElements.length; i++) {
				if (headingElements[i].getBoundingClientRect().top <= 120) {
					activeIdx = i;
				}
			}
			tocLinks.forEach(link => link.classList.remove('active'));
			if (activeIdx >= 0) {
				const id = headingElements[activeIdx].id;
				const active = document.querySelector<HTMLAnchorElement>(`.toc a[href="#${id}"]`);
				if (active) active.classList.add('active');
			}
		}

		window.addEventListener('scroll', updateActive, { passive: true });
		updateActive();
	}
</script>
